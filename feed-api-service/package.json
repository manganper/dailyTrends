{
  "name": "daily-trends",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm i && tsc && tsc-alias",
    "clean": "rm -rf node_modules dist package-lock.json *.tgz || true",
    "lint": "eslint . --ext .ts",
    "test": "npm ls --depth=0 || npm run build && jest --useStderr --forceExit",
    "start": "node --inspect ./dist/App.js",
    "start:watch": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manganper/dailyTrends.git"
  },
  "author": "Manuel Gandul PÃ©rez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/manganper/dailyTrends/issues"
  },
  "homepage": "https://github.com/manganper/dailyTrends#readme",
  "dependencies": {
    "dotenv": "8.2.0",
    "express": "4.18.2",
    "mongodb-memory-server": "8.12.2",
    "mongoose": "7.0.3"
  },
  "devDependencies": {
    "@types/mongodb-memory-server": "2.3.0",
    "@types/mongoose": "5.11.97",
    "@shelf/jest-mongodb": "4.1.7",
    "@types/express": "4.17.17",
    "@types/jest": "27.0.2",
    "@types/node": "17.0.0",
    "@typescript-eslint/eslint-plugin": "5.58.0",
    "@typescript-eslint/parser": "5.58.0",
    "eslint": "8.38.0",
    "jest": "29.5.0",
    "nodemon": "2.0.22",
    "ts-node": "9.0.0",
    "ts-jest": "29.1.0",
    "tsc-alias": "1.8.5",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.0.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node --inspect=5859 -r tsconfig-paths/register -r ts-node/register src/App.ts",
    "ext": "ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@config/(.*)$": "<rootDir>/config/$1",
      "^@database/(.*)$": "<rootDir>/database/$1",
      "^@helpers/(.*)$": "<rootDir>/helpers/$1",
      "^@middlewares/(.*)$": "<rootDir>/middlewares/$1",
      "^@models/(.*)$": "<rootDir>/models/$1",
      "^@routes/(.*)$": "<rootDir>/routes/$1",
      "^@services/(.*)$": "<rootDir>/services/$1",
      "^@types": "<rootDir>/types/index.ts"
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "preset": "@shelf/jest-mongodb"
  }
}
